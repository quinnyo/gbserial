{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "make",
            "presentation": {
                "reveal": "silent",
                "revealProblems": "onProblem"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$rgbdserror",
                "$rgbdslinkerror",
            ]
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "make clean",
            "group": "none",
            "problemMatcher": [
                "$rgbdserror",
                "$rgbdslinkerror",
            ]
        }
    ]
}